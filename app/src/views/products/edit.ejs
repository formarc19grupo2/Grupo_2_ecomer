<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%-include('../partials/head') %> 
<body>
	<!-- Header -->
	<%-include('../partials/header') %> 
	<!-- /Header -->

		<form action="/products/edit/<%= product.id %>?_method=PUT" method="POST" class="form-register" enctype="multipart/form-data">
		<h4>Edicion de productos</h4>
		<div>
			<label for="name" class="form-label"></label>
			<input type="text" name="name" id="name" placeholder="Nombre" 
			 class="controls <%= locals.errors && errors.name ? 'is-invalid' : null%> " value="<%= product.name %>">
			<% if (locals.errors && errors.name) { %>
				<small class="text-danger"><%= errors.name.msg %></small>
				<% } %>
		</div>
		<div>
			<label for="price" class="form-label "></label>
			<input class="controls <%= locals.errors && errors.price ? 'is-invalid' : null%>" type="text" name="price" id="price" value="<%= locals.old && old.price ? old.price : product.price %>" placeholder="precio">
			<small class="text-danger ms-2"><%= locals.errors && errors.price ? errors.price.msg : null%></small>
		</div>
		<div>
			<label for="discount" class="form-label"></label>
			<input class="controls <%= locals.errors && errors.discount ? 'is-invalid' : null%>" type="text" name="discount" id="discount" value="<%= locals.old && old.discount ? old.discount : product.discount %>" placeholder="descueto">
			<small class="text-danger ms-2"><%= locals.errors && errors.discount ? errors.discount.msg : null%></small>
		</div>
			<div class="controls">
			<label for="category" class="form-label">Categoría:</label>
			<select name="category" id="category" class="form-input">
				<option value="<%= product.category %>">Elegí</option>
				<option value="En Oferta"  <%= product.category === "is-sale" && "selected" %>>En oferta</option>
				<option value="Destacado" <%= product.category === "visited" && "selected" %>>Destacado</option>
			</select>
		</div>
		<div class="controls">
			<label for="description" class="form-label">Descripcion</label>
			<textarea cols="30" rows="3" name="description" id="description" class="form-input <%= (locals.errors && errors.description) && 'is-invalid'%>"
				><%= locals.old && old.description ? old.description : product.description %> </textarea>
			<small class="text-danger ms-2"><%= locals.errors && errors.description ? errors.description.msg : null%></small>
		</div>
		<div >
			<input type="file" name="image" id="image" accept="image/*"
				class="form-control%>">
		</div>
		<input class="botons" type="submit" value="GUARDAR">
		</form>
	 
	<!-- /todos los productos -->

	<!-- footer -->
	<%-include('../partials/footer') %> 
	<!-- /footer -->
</body>	
</html>